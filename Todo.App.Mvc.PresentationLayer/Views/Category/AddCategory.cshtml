@model ToDoCategory
@{
    ViewData["Title"] = "AddCategory";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" class="form-control" asp-for="Title" id="username">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="text" asp-for="UserId" value="@ViewBag.UserId" />
                </div>
                <button type="submit" class="btn btn-primary">Add ToDo</button>
            </form>
        </div>
    </div>
</div>

